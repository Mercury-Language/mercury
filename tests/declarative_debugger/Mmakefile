THIS_DIR = declarative_debugger
SUBDIRS=
TESTS_DIR=..
MAYBE_J1 = -j1
# Most test cases share library_forwarding.m. We could allow the tests
# to be done in parallel if we made a separate copy of that module
# for each test case that needs it.

#-----------------------------------------------------------------------------#

DECLARATIVE_PROGS =		\
	aadebug			\
	all_trusted		\
	app			\
	args			\
	backtrack		\
	big			\
	binary_search		\
	browser_mode		\
	browse_arg		\
	catch			\
