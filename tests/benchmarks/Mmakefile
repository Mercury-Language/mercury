PROGS = \
	cqueens \
	crypt \
	deriv \
	deriv2 \
	nrev \
	poly \
	primes \
	qsort \
	queens \
	query \
	tak

TESTS = $(PROGS)
include ../Mmake.common

# Module-specific options should go in Mercury.options so they can be found
# by `mmc --make'.
include Mercury.options

#-----------------------------------------------------------------------------#

%.runtest: %.res ;

CS =	$(PROGS:%=%.c)

cs:	$(CS)

dir.%:	$(PROGS)
	-mkdir $@
	cp $(PROGS) $@
	cp BenchEntry $@

