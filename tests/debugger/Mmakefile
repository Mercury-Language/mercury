mdbrc_test.out: mdbrc_test mdbrc_test.inp mdbrc_test.mdbrc
	cp mdbrc_test.mdbrc .mdbrc
	$(MDB_STD_NOINIT) ./mdbrc_test < mdbrc_test.inp \
		> mdbrc_test.out 2>&1
	/bin/rm .mdbrc

