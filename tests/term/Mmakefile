#-----------------------------------------------------------------------------#

THIS_DIR = term

#-----------------------------------------------------------------------------#

ifeq ($(MMAKE_USE_MMC_MAKE),yes)
# `mmc --make' doesn't know how to create `.trans_opt' files.
TERM_PROGS=
else
TERM_PROGS= \
	ack \
