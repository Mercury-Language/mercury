clean_hard_coded:
	rm -f target_mlobjs_c.o
	rm -f bitmap_test_output bitmap_test_output2 weak_ptr.discarded_output

realclean_local: realclean_hard_coded

realclean_hard_coded:
	rm -f Mercury.modules
	rm -f nonascii_gen

