	$(C_AND_GC_ONLY_PROGS) $(STATIC_LINK_PROGS) \
	$(C_ONLY_PROGS) \
	$(DOTNET_PROGS) $(JAVA_PROGS) $(SOLVER_PROGS) \
	$(TRAILED_PROGS) $(STACK_SEGMENT_PROGS) \
	$(MUTABLE_PROGS) $(TRACE_GOAL_ENV_PROGS) \
	$(CTGC_PROGS) $(BIG_DATA_PROGS)

