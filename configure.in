	if test "$BOOTSTRAP_MC" = ""; then
		AC_MSG_WARN("bootstrapping using only 2 low tag bits")
		mercury_cv_low_tag_bits=2
	else
		MERCURY_MSG("rebuilding with extra tag bits")
		MERCURY_MSG("installation may take longer than usual")
