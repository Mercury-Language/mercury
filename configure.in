		signal(SIGSEGV, (void (*)(int))handler);

		/* provoke a SIGSEGV */
		(*FAULT_ADDRESS)++;

		exit(1);
	}

	void handler(int signum, struct sigcontext_struct info) {
		if (signum == SIGSEGV &&
			(int *) info.cr2 == FAULT_ADDRESS &&
