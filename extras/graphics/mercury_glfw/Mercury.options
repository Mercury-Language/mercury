include GLFW.options

# The glfw binding only works in C grades.
MCFLAGS = \
    --libgrades-exclude java                \
    --libgrades-exclude csharp              \
    --install-prefix $(INSTALL_PREFIX)      \
    $(GLFW_MCFLAGS)

MCFLAGS-mercury_glfw    += --no-warn-nothing-exported
MCFLAGS-mercury_glfw    += --no-warn-unused-interface-imports
