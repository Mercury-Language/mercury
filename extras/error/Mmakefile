INSTALL_PREFIX := $(INSTALL_PREFIX)/extras
MLFLAGS = --mercury-libs static

-include ../Mmake.params

.PHONY: default_target
default_target:	error

.PHONY: install
install:
	[ -d $(INSTALL_BINDIR) ] || mkdir -p $(INSTALL_BINDIR)
	cp error $(INSTALL_BINDIR)

.PHONY: depend
depend:	error.depend

.PHONY: check
check:
	true
